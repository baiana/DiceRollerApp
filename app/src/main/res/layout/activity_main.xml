<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  android:orientation="vertical"
  android:padding="10dp"
  tools:context=".MainActivity"
  >

  <ImageView
    android:id="@+id/dice_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/dice_1"
    android:contentDescription="@string/dice_image_description"
    />

  <Button
    android:id="@+id/roll_button"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="36dp"
    android:layout_marginRight="36dp"
    android:layout_gravity="center"
    android:background="@drawable/roll_button_shape"
    android:backgroundTint="#90CD75"
    android:fontFamily="@font/titillium_web_semibold"
    android:text="@string/roll_button_text"
    android:textColor="@android:color/white"
    android:textSize="22sp"
    />

</LinearLayout>